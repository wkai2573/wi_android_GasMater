<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  tools:context=".ui.component.FieldAdvFuseFlow">

  <TextView
    android:id="@+id/titleTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="?attr/colorPrimary"
    android:textSize="12sp"
    tools:text="欄位標題" />

  <LinearLayout
    android:id="@+id/readLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="70dp"
    android:paddingHorizontal="8sp">

    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/readCheckbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:text="讀取"
      android:textColor="?attr/colorPrimary"
      app:buttonTint="?attr/colorPrimary" />

    <TextView
      android:id="@+id/readValueTv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="12dp"
      android:textSize="16sp"
      tools:text="欄位數值" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/writeLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="70dp"
    android:paddingHorizontal="8sp">

    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/writeCheckbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:text="設定"
      android:textColor="?attr/colorError"
      app:buttonTint="?attr/colorError" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/writeLowerLimitInput"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:hint="下限"
      app:suffixText="L/h">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="4dp"
      android:text="~"
      android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/writeUpperLimitInput"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:hint="上限"
      app:suffixText="L/h">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true" />
    </com.google.android.material.textfield.TextInputLayout>

  </LinearLayout>

  <com.google.android.material.divider.MaterialDivider
    android:id="@+id/bottomDivider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:dividerInsetEnd="32dp" />

</LinearLayout>