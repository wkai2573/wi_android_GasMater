<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/frameLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.findbt.FindbtFragment">

  <Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="BT搜尋"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="藍芽連接"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button" />



  <!-- 權限要求layout -->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/revokedPermissionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:visibility="gone">

    <com.google.android.material.textview.MaterialTextView
      android:id="@+id/revokedPermissionTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/requestPermissionBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.45"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="權限未同意顯示文字" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/requestPermissionBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/request_permission"
      android:textSize="30sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/revokedPermissionTv" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
    android:id="@+id/devicesTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="findbt Empty"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button2" />
</androidx.constraintlayout.widget.ConstraintLayout>