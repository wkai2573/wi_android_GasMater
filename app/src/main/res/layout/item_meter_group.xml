<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?android:attr/selectableItemBackground"
  android:orientation="vertical"
  android:padding="8dp"
  tools:context=".ui.meterwork.groups.MeterGroupListAdapter">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wavein.gasmeter.ui.component.Field
      android:id="@+id/field_group"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:title="群組"
      tools:value="00001" />

    <com.wavein.gasmeter.ui.component.Field
      android:id="@+id/field_readCount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      app:title="已抄表/總數量"
      tools:value="15/30" />
  </LinearLayout>

  <com.wavein.gasmeter.ui.component.ErrorTextView
    android:id="@+id/errTv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    tools:text="TestError" />

</LinearLayout>